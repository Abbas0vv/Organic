@model CreateProductViewModel

<div class="container mt-5">
	<form method="post" enctype="multipart/form-data">
		<div class="mb-3">
			<label asp-for="Name" for="exampleFormControlInput1" class="form-label">Product Name</label>
			<input type="text" asp-for="Name" class="form-control" id="exampleFormControlInput1" placeholder="Enter Name">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="NormalPrice" for="exampleFormControlInput1" class="form-label">Product Price</label>
			<input type="text" asp-for="NormalPrice" class="form-control" id="exampleFormControlInput1" placeholder="Enter price">
			<span asp-validation-for="NormalPrice" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Offer" for="exampleFormControlInput1" class="form-label">Product Offer</label>
			<input type="number" asp-for="Offer" class="form-control" id="exampleFormControlInput1" placeholder="Enter if product has a offer">
			<span asp-validation-for="Offer" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="File" for="formFile" class="form-label">Upload Product Image</label>
			<input asp-for="File" class="form-control" type="file" id="formFile">
			<span asp-validation-for="File" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-success">Create</button>
		<a asp-action="Index" class="btn btn-secondary">Back To Dashboard</a>
	</form>
</div>