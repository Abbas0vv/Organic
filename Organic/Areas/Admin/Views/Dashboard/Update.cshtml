@model CreateProductViewModel

<div class="container">
	<form method="post" enctype="multipart/form-data">
		<div class="mb-3">
			<label asp-for="Name" for="exampleFormControlInput1" class="form-label">Product Name</label>
			<input type="text" asp-for="Name" class="form-control" id="exampleFormControlInput1" value="@Model.Name">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="NormalPrice" for="exampleFormControlInput1" class="form-label">Product Price</label>
			<input type="text" asp-for="NormalPrice" class="form-control" id="exampleFormControlInput1" value="@Model.NormalPrice">
			<span asp-validation-for="NormalPrice" class="text-danger"></span>
		</div>
		@if (Model.Offer is not null)
		{
			<div class="mb-3">
				<label asp-for="Offer" for="exampleFormControlInput1" class="form-label">Product Offer</label>
				<input type="text" asp-for="Offer" class="form-control" id="exampleFormControlInput1" value="@Model.Offer">
				<span asp-validation-for="Offer" class="text-danger"></span>
			</div>
		}
		else
		{
			<div class="mb-3">
				<label asp-for="Offer" for="exampleFormControlInput1" class="form-label">Product Offer</label>
				<input type="text" asp-for="Offer" class="form-control" id="exampleFormControlInput1" placeholder="Enter Product Offer">
				<span asp-validation-for="Offer" class="text-danger"></span>
			</div>
		}
		<div class="mb-3">
			<label asp-for="File" for="formFile" class="form-label">Upload Product Image</label>
			<input asp-for="File" class="form-control" type="file" id="formFile" value="@Model.File">
			<span asp-validation-for="File" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-success">Save</button>
		<a asp-action="Index" class="btn btn-secondary">Back To Dashboard</a>
	</form>
</div>